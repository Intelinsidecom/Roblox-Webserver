<!DOCTYPE html>
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
<html lang="en">
<link href="~/favicon.ico" rel="icon">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/CSS/Base/CSS/Roblox.css">
    <link rel="stylesheet" href="~/CSS/RBXCommon.css">
    <link rel="stylesheet" href="~/CSS/Base/CSS/Footer.css">
    <link rel="stylesheet" href="~/CSS/Base/CSS/Header.css">
    <link rel="stylesheet" href="~/CSS/Base/CSS/StyleGuide.css">
    <link rel="stylesheet" href="~/CSS/Fonts/SourceSansPro-Google.css">
    <link rel="stylesheet" href="~/CSS/Legacy/Navigation.css">
    <link rel="stylesheet" href="~/CSS/Legacy/Modal.css">
    <link rel="stylesheet" href="~/CSS/Base/CSS/Item.css">
    <script async src="~/JS/lib/beacon/beacon.js"></script>
    <!-- Now we import the roblox js scripts, there is plenty of them -->
    <!-- dependencies other scripts may use or not, angular, ajax and so on -->
    <script type="text/javascript" src="~/JS/jquery/jquery-1.11.1.min.js"></script>
    <script type="text/javascript" src="~/JS/jquery/jquery-migrate-1.2.1.min.js"></script>
    <script type="text/javascript" src="~/JS/jquery.cookie.js"></script>
    <script type="text/javascript" src="~/JS/angular/angular.min.js"></script>
    <script type="text/javascript" src="~/JS/angular/angular-sanitize.min.js"></script>
    <script type="text/javascript" src="~/JS/angular/angular-ui-router.min.js"></script>
    <script type="text/javascript" src="~/JS/angular/ui-bootstrap-custom-tpls-2.5.0.js"></script>
    <script type="text/javascript" src="~/JS/templateApp.js"></script>
    <script type="text/javascript" src="~/JS/viewapp/common/services/robloxService.js"></script>
    <script type="text/javascript" src="~/JS/viewapp/common/filters.js"></script>
    <script type="text/javascript" src="~/JS/viewapp/app.js"></script>
    <script type="text/javascript">
      window.Roblox = window.Roblox || {};
      Roblox.Lang = Roblox.Lang || {};
      Roblox.Intl = Roblox.Intl || function () {
        this.f = function (template, params) {
          if (!template || !params || typeof params !== "object") {
            return template || "";
          }
          return template.replace(/\{(\w+)\}/g, function (_, key) {
            return Object.prototype.hasOwnProperty.call(params, key) ? params[key] : "{" + key + "}";
          });
        };
      };
      Roblox.TranslationResource = Roblox.TranslationResource || function (nameSpace) {
        this.nameSpace = nameSpace;
        this.get = function (key, fallback) {
          var ns = Roblox.Lang && Roblox.Lang[nameSpace];
          if (ns && Object.prototype.hasOwnProperty.call(ns, key)) {
            return ns[key];
          }
          return fallback || "";
        };
      };
    </script>
    <script type="text/javascript" src="~/JS/viewapp/common/providers/languageResourceProvider.js"></script>
    <script type="text/javascript">

      window.Roblox = window.Roblox || {};
      Roblox.EnvironmentUrls = Roblox.EnvironmentUrls || {};
      
      Roblox.EnvironmentUrls.websiteUrl = Roblox.EnvironmentUrls.websiteUrl || "http://localhost:5077";
      Roblox.EnvironmentUrls.notificationApi = Roblox.EnvironmentUrls.notificationApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.chatApi = Roblox.EnvironmentUrls.chatApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.presenceApi = Roblox.EnvironmentUrls.presenceApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.friendsApi = Roblox.EnvironmentUrls.friendsApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.thumbnailsApi = Roblox.EnvironmentUrls.thumbnailsApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.gamesApi = Roblox.EnvironmentUrls.gamesApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.followingsApi = Roblox.EnvironmentUrls.followingsApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.metricsApi = Roblox.EnvironmentUrls.metricsApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.localeApi = Roblox.EnvironmentUrls.localeApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.accountSettingsApi = Roblox.EnvironmentUrls.accountSettingsApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.gameInternationalizationApi = Roblox.EnvironmentUrls.gameInternationalizationApi || "http://localhost:5077";
      Roblox.EnvironmentUrls.domain = Roblox.EnvironmentUrls.domain || "localhost:5077";
      
      if (Roblox.EventStream && Roblox.EventStream.Init) {
        Roblox.EventStream.Init("/images/signup/e.png", "/images/signup/e.png", "/pe?t=studio", "/pe?t=diagnostic");
      }
    </script>
    <script type="text/javascript" src="~/JS/Generated/js/Roblox_TranslationResources_Notifications_NotificationStreamResources_en_us_standard.js"></script>
    <script type="text/javascript" src="~/JS/dist/js/notificationStream.bundle.min.js"></script>
    <script type="text/javascript" src="~/JS/viewapp/widgets/notificationStream/notificationStreamIcon.js"></script>



    @RenderSection("Head", required: false)
</head>
<body>
    <partial name="_Header" />

    @if (User.Identity.IsAuthenticated)
    {
        var userId = User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "0";

        long parsedUserId;
        long.TryParse(userId, out parsedUserId);

        string? userNameFromDb = null;
        if (parsedUserId > 0)
        {
            var connStr = Configuration.GetConnectionString("Default");
            if (!string.IsNullOrWhiteSpace(connStr))
            {
                userNameFromDb = Users.UserQueries.GetUserNameByIdAsync(connStr, parsedUserId).GetAwaiter().GetResult();
            }
        }

        var userName =
            userNameFromDb ??
            User?.FindFirst("RobloxUsername")?.Value ??
            User?.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value ??
            User?.Identity?.Name ??
            userId;

        <!-- LEFT NAV MENU -->
        <div id="navigation" class="rbx-left-col" data-behavior="left-col">
            <ul>
                <li class="text-lead">
                    <a class="text-overflow" href="/users/@userId/profile">@userName</a>
                </li>
                <li class="rbx-divider"></li>
            </ul>

            <div class="rbx-scrollbar" data-toggle="scrollbar" onselectstart="return false;">
                <ul>
                    <li><a href="/home" id="nav-home"><span class="icon-nav-home"></span><span>Home</span></a></li>
                    <li><a href="/users/@userId/profile" id="nav-profile"><span class="icon-nav-profile"></span><span>Profile</span></a></li>
                    <li>
                        <a href="/my/messages" id="nav-message" data-count="0">
                            <span class="icon-nav-message"></span><span>Messages</span>
                            <span class="notification-blue hide" title="0">0</span>
                        </a>
                    </li>
                    <li>
                        <a href="/friends" id="nav-friends" data-count="0">
                            <span class="icon-nav-friends"></span><span>Friends</span>
                            <span class="notification-blue hide" title="0">0</span>
                        </a>
                    </li>
                    <li>
                        <a href="/my/character" id="nav-character">
                            <span class="icon-nav-charactercustomizer"></span><span>Avatar</span>
                        </a>
                    </li>
                    <li>
                        <a href="/inventory" id="nav-inventory">
                            <span class="icon-nav-inventory"></span><span>Inventory</span>
                        </a>
                    </li>
                    <li>
                        <a href="/trade" id="nav-trade">
                            <span class="icon-nav-trade"></span><span>Trade</span>
                        </a>
                    </li>
                    <li>
                        <a href="/groups" id="nav-group">
                            <span class="icon-nav-group"></span><span>Groups</span>
                        </a>
                    </li>
                    <li>
                        <a href="/forum" id="nav-forum">
                            <span class="icon-nav-forum"></span><span>Forum</span>
                        </a>
                    </li>
                    <li>
                        <a href="/blog" id="nav-blog">
                            <span class="icon-nav-blog"></span><span>Blog</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    }

    <div id="navContent">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <partial name="_Footer" />
    <script type="text/javascript" src="~/JS/leancore/Navigation.js"></script>
    <script type="text/javascript">
        $(function () {
            $(document).on("click", '[data-behavior="nav-notification"]', function (e) {
                e.preventDefault();
                $('[data-behavior="left-col"]').toggleClass("nav-show");
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
